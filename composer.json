{
    "name": "oeltimacreation/php-simplequeue",
    "description": "A lightweight, framework-agnostic background job queue system for PHP with Redis and database drivers",
    "type": "library",
    "license": "MIT",
    "version": "1.0.0",
    "keywords": [
        "queue",
        "job",
        "background",
        "worker",
        "redis",
        "async",
        "task",
        "scheduler"
    ],
    "authors": [
        {
            "name": "Gema Aji Wardian",
            "email": "gema@oeltimacreation.com"
        }
    ],
    "homepage": "https://github.com/oeltimacreation/php-simplequeue",
    "support": {
        "issues": "https://github.com/oeltimacreation/php-simplequeue/issues",
        "source": "https://github.com/oeltimacreation/php-simplequeue"
    },
    "require": {
        "php": "^8.1",
        "psr/container": "^1.1|^2.0",
        "psr/log": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0|^11.0",
        "predis/predis": "^2.0|^3.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "suggest": {
        "predis/predis": "Required for Redis queue driver",
        "ext-pcntl": "Required for graceful worker shutdown on Unix systems",
        "ext-pdo": "Required for database queue driver"
    },
    "autoload": {
        "psr-4": {
            "Oeltima\\SimpleQueue\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Oeltima\\SimpleQueue\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs --standard=PSR12 src",
        "cs-fix": "phpcbf --standard=PSR12 src"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
